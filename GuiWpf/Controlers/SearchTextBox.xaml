            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
            Text="{Binding Path=SearchWord, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}}">
