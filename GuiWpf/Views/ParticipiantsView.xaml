<UserControl
    x:Class="GuiWpf.Views.ParticipiantsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GuiWpf.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TabControl
            Grid.Row="0"
            materialDesign:ColorZoneAssist.Mode="PrimaryLight"
            Style="{StaticResource MaterialDesignTabControlBase}"
            TabStripPlacement="Left">
            <TabItem Header="משתתפים">
                <Grid Margin="10">
                    <GroupBox materialDesign:ColorZoneAssist.Mode="Light" Style="{StaticResource MaterialDesignCardGroupBox}">
                        <GroupBox.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <ComboBox
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    materialDesign:HintAssist.Hint="שנה"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <ComboBoxItem Content="כל השנים" />
                                    <ComboBoxItem Content="2021" />
                                    <ComboBoxItem Content="2022" />
                                </ComboBox>
                                <ComboBox
                                    Grid.Column="1"
                                    materialDesign:HintAssist.Hint="סנן"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <ComboBoxItem Content="כל המששתתפים" />
                                    <ComboBoxItem Content="משתתפים מישראל" />
                                    <ComboBoxItem Content="משתתפים מהתפוצות" />
                                    <ComboBoxItem Content="משתתפים ללא חבורתא" />
                                </ComboBox>
                            </Grid>
                        </GroupBox.Header>
                        <DataGrid
                            Height="auto"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding Participiants}"
                            SelectedItem="{Binding SelectedParticipant}"
                            Style="{StaticResource MaterialDesignDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.Header>
                                        <CheckBox />
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="שם מלא" />
                                <DataGridTextColumn Header="ארץ" />
                                <DataGridTextColumn Header="טלפון" />
                                <DataGridTextColumn Header="מייל" />
                                <DataGridTemplateColumn Header="מסלול מועדף">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ListBox Style="{StaticResource MaterialDesignFilterChipListBox}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.Header>
                                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="מחק את כל הנבחרים">
                                            <materialDesign:PackIcon Kind="Delete" />
                                        </Button>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="מחק משתתף">
                                                <materialDesign:PackIcon Kind="Delete" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn>
                                    <DataGridTemplateColumn.Header>
                                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="שלח מייל לכל הנבחרים">
                                            <materialDesign:PackIcon Kind="Email" />
                                        </Button>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="שלח מייל למשתתף">
                                                <materialDesign:PackIcon Kind="Email" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Header="ארכיון">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="שלח לארכיון">
                                                <materialDesign:PackIcon Kind="Archive" />
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</UserControl>
